{{#if value}}
    {{#eachOptions items}}
        {{#eq this.key ../value}}
            {{#if ../../this.href}}
            <span class="ellipsis_inline" data-placement="bottom" title="{{value}}">
                <a target="_blank" href="{{../../../this.href}}">{{value}}</a>
            </span>
            {{else}}
            <div class="ellipsis_inline" data-placement="bottom" title="{{value}}">
                {{value}}
            </div>
            {{/if}}
        {{/eq}}
    {{/eachOptions}}
{{/if}}
